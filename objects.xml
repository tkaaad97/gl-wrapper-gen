<?xml version="1.0" encoding="UTF-8"?>
<objects>
    <object name="Buffer">
        <constructor type="Multiple">glCreateBuffers</constructor>
        <destructor type="Multiple">glDeleteBuffers</destructor>
        <injects>
            <inject xpath='/registry/commands/command/param[name = "buffer" or name = "buffers"]' attribute="object" value="Buffer" /> </injects>
    </object>
    <object name="Framebuffer">
        <constructor type="Multiple">glCreateFramebuffers</constructor>
        <destructor type="Multiple">glDeleteFramebuffers</destructor>
        <injects>
            <inject xpath='/registry/commands/command/param[name = "framebuffer" or name = "framebuffers"]' attribute="object" value="Framebuffer" />
        </injects>
    </object>
    <object name="Program">
        <constructor type="SingleReturn">glCreateProgram</constructor>
        <destructor type="Single">glDeleteProgram</destructor>
        <injects>
            <inject xpath='/registry/commands/command/param[name = "program" or name = "programs"]' attribute="object" value="Program" />
            <inject xpath='/registry/commands/command/proto[name = "glCreateProgram"]' attribute="object" value="Program" />
        </injects>
    </object>
